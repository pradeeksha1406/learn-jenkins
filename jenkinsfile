pipeline{
  agent {
    node { label 'workstation' }
  }

  environment {
     SAMPLE_URL = "https://sample.com"
  }

   stages {


     stage('one') {
       steps {
         sh 'echo one'
         mail bcc: '', body: 'hello', cc: '', from: '', replyTo: '', subject: 'hello', to: 'pradeep@gmail.com'
       }
     }


     stage('two') {
           steps {
             sh 'echo two'
           }
     }
   }

    post {
       always {
           echo 'sending mail'
           mail bcc: '', body: 'hello', cc: '', from: '', replyTo: '', subject: 'hello', to: 'pradeep@gmail.com'
       }
     }

}